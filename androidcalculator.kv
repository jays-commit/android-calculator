<MyRoot>

    calc_field: calc_field

    orientation: 'vertical'
    TextInput:
        id: calc_field
        height: 200
        size_hint: (1, None)
        readonly: True
        disabled: True
        font_size: 64

    GridLayout:
        rows: 4
        columns: 4
        padding: 10
        spacing: 10
        height: 400
        size_hint: (1, None)


        Button:
            text:"1"
            font_size: 26
            on_press: root.calc_symbol('1')

        Button:
            text:"2"
            font_size: 26
            on_press: root.calc_symbol('2')
        Button:
            text:"3"
            font_size: 26
            on_press: root.calc_symbol('3')



